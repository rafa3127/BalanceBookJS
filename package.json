{
  "name": "balance-book-js",
  "version": "2.0.0",
  "description": "BalanceBookJS is a JavaScript library that provides an object-oriented approach based on fundamental accounting principles.",
  "main": "lib/cjs/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "clean": "rm -rf lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types && npm run post-build",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "post-build": "cp src/cjs-package.json lib/cjs/package.json",
    "type-check": "tsc --noEmit",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "npm-publish": "npm run build && npm pack && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafa3127/BalanceBookJS.git"
  },
  "keywords": [
    "accounting"
  ],
  "author": "Rafael Correa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rafa3127/BalanceBookJS/issues"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/rafa3127/BalanceBookJS#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
